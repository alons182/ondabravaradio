@import "nib"
@import "normalize.styl"
@import "icons.styl"


oscuro = #353535
//rojo = #e22100
rojo = #e23333
gris = #b4b4b4

*
	box-sizing border-box

html
body
	width 100%
	height 100%

body
	font-family 'open sans', sans-serif
	font-size 16px
	line-height 30px
	background oscuro
	//overflow-y hidden
	
	&.page 
		background-image url('./img/bg-radio.jpeg')
		background-size cover
		background-position center center
		background-repeat no-repeat
		
@media only screen and (min-width: 960px)
	body
		overflow-y hidden

ul
	margin 0
	padding 0
	

a
	text-decoration none
	transition all .5s ease
p 
	margin-top 0
	margin-bottom 1.25rem
h1
h2
h3
h4
h5
	margin-top 0
	font-weight 800
	color #333333
	color cafe
h1
	line-height 45px

img
	max-width 100%
	height auto
input[type="text"]
input[type="email"]
input[type="tel"]	
textarea
	//border 1px solid #F3F3F3
	width 100%
	height 32px
textarea
	height 100px 
	
.txt-center
	text-align center
.overflow
	overflow hidden

	
.wpcf7-submit
.btn
	border 1px solid #fff
	font-size inherit
	color white
	background 0 0
	text-align center
	cursor pointer
	padding 10px 30px 10px
	display inline-block
	text-transform uppercase
	outline 0
	position relative
	transition all .3s ease
	transform translateZ(0)
	background-color rojo
	&:hover
		background-color: #000 
		color white
		//border-color rojo
.wpcf7-submit
.btn-rojo
	background rojo
	color #fff
.inner
	max-width 1200px
	margin 0 auto
	padding-left 1rem
	padding-right 1rem

.header
	background-color #000
	padding 6px 0
	position absolute
	left 0
	right 0
	&-logo
		float left
		width 100px
		margin-left 1rem
		display block
	&-menu
		display none
		position absolute
		background-color oscuro
		left 0
		right 0
		top 114px
		text-align center
		z-index 999
		li 
			display block
		
		a 
			display block
			color white
			padding .5rem
			&:hover
				color rojo
		
		
	&-social
		float right
		margin-right 1rem
		margin-top 8px
		a 
			display inline-block
			color white
			padding .5rem
			
			&:hover
				color rojo
	&-btn-menu
		display block
		background-color rojo
		color white
		text-align center
		border none
		position absolute
		top 74px 
		left 0
		right 0
		width 100%
		font-size 2rem
@media only screen and (min-width: 400px)
	.header
		&-social
			a
				font-size 1.5rem 
@media only screen and (min-width: 690px)
	.header
		&-menu
			display block !important
			position static
			background-color transparent
			float right
			line-height 45px 
			margin-right 1rem
			
			li 
				display inline-block
				vertical-align top
		&-btn-menu
			display none
		
.number-header
	background-color oscuro
	color white
	position absolute
	right 0
	left 0
	top 114px
	padding 0 .3rem
	text-align center
	font-size 14px
@media only screen and (min-width: 690px)
	.number-header
		background-color rojo
		left auto
		top 74px
.main
	height auto
	min-height 100%
	padding-top 65px
.player-container
	text-align center
	max-width 450px
	margin 0 auto
.player
	text-align center
	padding-top 100px
.text-play
	color white
	font-size 1rem
	background-color rgba(0,0,0,.8)
	padding .5rem
	display inline-block
.playlist
	overflow-y hidden
	background-color rgba(0,0,0,.8)
	display inline-block
	iframe
		height 352px
		margin-top -176px//-111px
		b 
			color red !important
		table
			display none
	
.tunein
	color #FFF
	font-size 1.5em
	background rgba(0,0,0,.8)
	padding .5em
	text-align center
	display inline-block

	img
		display inline-block
		vertical-align middle
.ads
	margin-top 1rem
	bottom 1rem
	left 1rem
	right 1rem
	margin-bottom 1rem
	.owl-carousel
		max-width 727px
		
.news
	width 100%
	margin-top 1em
	padding 1rem
	background-color rgba(0,0,0,.8)
	color white
	a 
		color white
		position absolute
		top 0
		bottom 0
		left 0
		right 0
		display block
		z-index 100
	&-post 
		&-image
			max-width 768px
			//height 316px
			img 
				width 100%
				display block
		&-info
			margin-top .5rem
			p 
				margin-bottom 0
				font-size 1.3rem
@media only screen and (min-width: 768px)
	.playlist
		iframe
			margin-top -176px
@media only screen and (min-width: 960px)
	.ads
		position absolute
		margin-bottom 0
	.text-play
		display none
	.player-container
		float left
		margin-left 1rem
	.news
		float right
		width 40%
		margin-top 100px

.footer
	color white
	font-size 14px
	right 1rem
	bottom 0
	text-align center
	a 
		color white
		font-size 2rem
		display inline-block
		vertical-align middle
		&:hover
			color rojo
@media only screen and (min-width: 960px)
	.footer
		position absolute